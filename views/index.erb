<div class="row" ng-controller="indexCtrl">
  <div class="col-md-4 col-md-offset-4">
    <form class="form-inline" ng-submit="createPhrase()">
      <div class="form-group">
        <input class="form-control" type="text" name="phrase" ng-model="newPhrase.name" placeholder="New Phrase" required />
      </div>
        <input class="btn btn-primary" type="submit" value="Create"/>
    </form>
    <table class="table">
      <thead>
        <th></th>
        <th></th>
      </thead>
      <tbody class="phrases">

          <tr ng-repeat="phrase in phrases">
            <td><edit-phrase phrase="phrase"></edit-phrase></td>

              <!-- <a href="#" ng-click><span class="glyphicon glyphicon-pencil"></span></a> -->
          </tr>
      </tbody>
    </table>
  </div>
</div>
